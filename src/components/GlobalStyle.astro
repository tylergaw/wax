<style is:global>
  :root {
    --font-display: "Texturina", serif;

    /* Font sizes */
    --font-size-14: calc(14 / 16 * 1rem);
    --font-size-16: 1rem;
    --font-size-18: calc(18 / 16 * 1rem);
    --font-size-20: calc(20 / 16 * 1rem);
    --font-size-22: calc(22 / 16 * 1rem);
    --font-size-24: calc(24 / 16 * 1rem);
    --font-size-28: calc(28 / 16 * 1rem);
    --font-size-30: calc(30 / 16 * 1rem);
    --font-size-32: calc(32 / 16 * 1rem);

    /* Color */
    --color-primary-dark: #2b2b2b;
    --color-text: var(--color-primary-dark);
    --color-accent-primary: red;

    /* Grid */
    --g-cols: 18;
    --g-gutter: calc(13 / 16 * 1rem);
    --g-col-width: calc(90 / 16 * 1rem);

    --g-cols-2: calc((var(--g-col-width) * 2) + var(--g-gutter));
    --g-cols-3: calc((var(--g-col-width) * 3) + var(--g-gutter) * 2);

    --g-max-width: calc(
      (var(--g-col-width) * var(--g-cols)) +
        (var(--g-gutter) * (var(--g-cols) - 1))
    );

    /* Spacing */
    --sp-2: calc(2 / 16 * 1rem);
    --sp-4: calc(4 / 16 * 1rem);
    --sp-6: calc(8 / 16 * 1rem);
    --sp-8: calc(8 / 16 * 1rem);
    --sp-10: calc(10 / 16 * 1rem);
    --sp-12: calc(12 / 16 * 1rem);
    --sp-14: calc(14 / 16 * 1rem);
    --sp-16: calc(16 / 16 * 1rem);
    --sp-18: calc(18 / 16 * 1rem);
    --sp-20: calc(20 / 16 * 1rem);
    --sp-24: calc(24 / 16 * 1rem);
    --sp-28: calc(28 / 16 * 1rem);
  }

  * {
    box-sizing: border-box;
  }

  html {
    background: white;
    color: var(--color-text);
    font-size: var(--font-size-16);
    font-family: var(--font-display);
    font-weight: 300;
  }

  body {
    background-image: url("/images/texture.svg"), url("/images/texture.svg"),
      url("/images/texture.svg");
    background-repeat: repeat;
    background-size: 80px, 40px, 37px;
    margin: 0;
  }

  h1,
  h2,
  h3 {
    font-weight: 500;
  }

  .font-display {
    font-family: var(--font-display);
    font-optical-sizing: auto;
  }

  .standard-page-title {
    font-size: var(--font-size-32);
    font-weight: 200;
    line-height: 1;
    padding-bottom: var(--sp-20);
  }

  .standard-page-subtitle {
    font-size: var(--font-size-22);
    font-weight: 200;
  }

  .standard-page-title a,
  .standard-page-subtitle a {
    color: var(--color-accent-primary);
  }

  .standard-restricted-width {
    margin: 0 auto;
    max-width: min(var(--g-max-width), 93%);
  }

  .capitalize {
    text-transform: capitalize;
  }

  @keyframes spin {
    0% {
      rotate: 0deg;
    }

    100% {
      rotate: 359deg;
    }
  }

  .text-list-container {
    container-type: inline-size;
    container-name: text-list-container;
  }

  .text-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .text-list li + li {
    margin-top: var(--sp-24);
  }

  .text-list a {
    color: inherit;
    font-size: var(--font-size-22);
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1;
    text-decoration: none;
  }

  .text-list a:where(:hover, :focus) {
    color: var(--color-accent-primary);
  }

  @container text-list-container (min-width: 500px) {
    .text-list {
      columns: 2;
      column-width: 14ch;
    }

    .text-list li {
      padding-right: var(--sp-10);
    }

    .text-list a {
      font-size: var(--font-size-20);
      font-weight: 700;
    }
  }

  @container text-list-container  (min-width: 915px) {
    .text-list {
      columns: 3;
    }
  }

  @container text-list-container  (min-width: 1300px) {
    .text-list {
      columns: 4;
    }
  }

  @container text-list-container  (min-width: 1500px) {
    .text-list {
      columns: 5;
    }
  }
</style>
