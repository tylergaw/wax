---
import type { Release } from "@types";
import { getHumanColor, getMachineColor, getReleaseUrl } from "@util/data";
import Vinyl from "@components/Vinyl.astro";

const { releases } = Astro.props;
---

<ul>
  {
    releases.map((release: Release) => {
      const {
        basic_information: { title, artists },
      } = release;

      return (
        <li data-id={release.id}>
          <a href={getReleaseUrl(release)}>
            <div style={`--disc-color: ${getMachineColor(release)}`}>
              <Vinyl />
            </div>
            <div class="info">
              <div class="primary-info">
                <p class="title">{title}</p>
                <p class="artist">{artists[0].name}</p>
              </div>
              <p class="desciption">{getHumanColor(release)}</p>
            </div>
          </a>
        </li>
      );
    })
  }
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    column-gap: var(--g-gutter);
    row-gap: calc(var(--sp-8) * 6);
  }

  li {
    width: var(--g-col-width);
  }

  a {
    color: inherit;
    display: block;
    text-decoration: none;
  }

  .info {
    margin-top: var(--sp-4);
  }

  .title,
  .artist {
    margin: 0;
  }

  .artist {
    margin-top: var(--sp-2);
  }

  .title {
    font-weight: 500;
  }

  .desciption {
    font-size: var(--font-size-14);
    font-weight: 300;
    margin: var(--sp-8) 0 0 0;
  }
</style>
